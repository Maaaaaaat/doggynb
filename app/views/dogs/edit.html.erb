
<div class="container m-1 pb-2 d-flex flex-column align-items-center">
<h1 class="mb-4">Editer le profil de votre chien</h1>
<%= simple_form_for @dog do |f| %>

<div class="d-flex justify-content-center">
  <%= f.input :name, input_html: { style: 'width: 300px;' } %>
  </div>
  <div class="d-flex justify-content-center">
  <%= f.input :breed, input_html: { style: 'width: 300px;' } %>
  </div>
  <div class="d-flex justify-content-center">
  <%= f.input :city, input_html: { style: 'width: 300px;' } %>
  </div>
  <div class="d-flex justify-content-center">
  <%= f.input :description, input_html: { style: 'width: 300px;' } %>
  </div>
  <%= f.input :start_date, input_html: { style: 'width: 100px;' } %>
  <%= f.input :end_date, input_html: { style: 'width: 100px;' } %>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
</div>
